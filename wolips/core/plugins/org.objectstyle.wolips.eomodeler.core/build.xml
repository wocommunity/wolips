<?xml version="1.0"?>

<!-- ======================================================== -->
<!--        Main WOLips plugins Ant build file                -->
<!-- Serves as a facade for different helper build files.     -->
<!-- ======================================================== -->
<project name="org.objectstyle.wolips.eomodeler.core" default="" basedir=".">

	<property file="default.properties" />

	<!-- ========================================== -->
	<!-- Build java.                                -->
	<!-- ========================================== -->
	<target name="java">
		<path id="classpath">
			<fileset dir="../../lib">
				<include name="**/*.jar" />
			</fileset>
			<fileset dir="../../../../lib">
				<include name="**/*.jar" />
			</fileset>
			<fileset dir="../../../3rdparty/plugins/org.objectstyle.wolips.thirdparty.commonscollections">
				<include name="**/*.jar" />
			</fileset>
			<fileset dir="../../../3rdparty/plugins/org.objectstyle.wolips.thirdparty.velocity/">
				<include name="**/*.jar" />
			</fileset>
			<pathelement path="../../../../${build.output.java.dir}" />
      <pathelement path = "${wo.dir.library.frameworks}/JavaEOAccess.framework/Resources/Java/javaeoaccess.jar"/>
      <pathelement path = "${wo.dir.library.frameworks}/JavaFoundation.framework/Resources/Java/javafoundation.jar"/>
	    <pathelement path = "${wo.dir.library.frameworks}/JavaEOControl.framework/Resources/Java/javaeocontrol.jar"/>
	    <pathelement path = "${wo.dir.library.frameworks}/JavaJDBCAdaptor.framework/Resources/Java/javajdbcadaptor.jar"/>
      <pathelement path = "${wo.dir.library.frameworks}/JavaXML.framework/Resources/Java/javaxml.jar"/>
		</path>
		<ant dir="." antfile="../../../../${project.buildscripts.dir}/plugin-project.xml" target="java">
			<property name="param.plugin.dir" value="." />
			<property name="param.java.dest.dir" value="../../../../${build.output.java.dir}" />
			<reference refid="classpath" torefid="classpath" />
		</ant>
	</target>

	<!-- ========================================== -->
	<!-- Build jar.                                 -->
	<!-- ========================================== -->
	<target name="jar">
		<patternset id="param.classes.patternset.refid">
			<include name="**/com/uwyn/rife/tools/**" />
			<include name="**/org/objectstyle/wolips/eomodeler/core/**" />
		</patternset>

		<ant dir="." antfile="../../../../${project.buildscripts.dir}/plugin-project.xml" target="jar.no.unpack">
			<property name="param.plugin.dir" value="." />
			<property name="param.classes.dir" value="../../../../${build.output.java.dir}" />
			<reference refid="param.classes.patternset.refid" />
			<property name="param.plugin.name" value="${plugin.name}" />
			<property name="param.build.dist.build.dir" value="../../../../${build.output.dist.dir}" />
		</ant>
	</target>

	<!-- ========================================== -->
	<!-- Build all.                                 -->
	<!-- Required parameters                        -->
	<!-- classpath the classpath refid              -->
	<!-- ========================================== -->
	<target name="all" depends="java">
	</target>

	<!-- ========================================== -->
	<!-- Build dist.                                -->
	<!-- ========================================== -->
	<target name="dist" depends="jar">
	</target>

</project>
