#set($dollar = '$')
<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>${groupId}</groupId>
	<artifactId>${artifactId}</artifactId>
	<packaging>war</packaging>
	<version>${version}</version>
	<name>${artifactId} WebObjects Application</name>
	<url>http://maven.apache.org</url>

	<properties>
		<!-- properties used for filtering and dependency management -->
		<jvmtarget>1.5</jvmtarget>
		<mainclass>${package}.app.Application</mainclass>
		<webobjects.groupId>com.webobjects</webobjects.groupId>
		<webobjects.version>${WebObjectsVersion}</webobjects.version>

		<wonder.core.groupId>wonder.core</wonder.core.groupId>
		<wonder.version>${WonderVersion}</wonder.version>
	#if( $WebObjectsVersion.contains( "5.3" ) )
	<wonder.classifier>wo53</wonder.classifier>
	#elseif( $WebObjectsVersion.contains( "5.4" ) )
	<wonder.classifier>wo54</wonder.classifier>
	#else
	<wonder.classifier>unknown</wonder.classifier>
	#end
</properties>

	<build>
		<finalName>${dollar}{project.artifactId}</finalName>
		<resources>
			<resource>
				<targetPath>Resources</targetPath>
				<directory>${dollar}{basedir}/src/main/resources</directory>
			</resource>
			<resource>
				<targetPath>Resources</targetPath>
				<directory>${dollar}{basedir}/src/main/components</directory>
			</resource>
			<resource>
				<targetPath>WebServerResources</targetPath>
				<directory>${dollar}{basedir}/src/main/webserver-resources
				</directory>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<archiveClasses>true</archiveClasses>
					<filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${dollar}{jvmtarget}</source>
					<target>${dollar}{jvmtarget}</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>${dollar}{wonder.core.groupId}</groupId>
			<artifactId>ERExtensions</artifactId>
			<version>${dollar}{wonder.version}</version>
			<classifier>${dollar}{wonder.classifier}</classifier>
		</dependency>
		<dependency>
			<groupId>${dollar}{wonder.core.groupId}</groupId>
			<artifactId>WOOgnl</artifactId>
			<version>${dollar}{wonder.version}</version>
			<classifier>${dollar}{wonder.classifier}</classifier>
		</dependency>
		<dependency>
			<groupId>${dollar}{wonder.core.groupId}</groupId>
			<artifactId>ERPrototypes</artifactId>
			<version>${dollar}{wonder.version}</version>
		</dependency>
		<dependency>
			<groupId>${dollar}{webobjects.groupId}</groupId>
			<artifactId>JavaWebObjects</artifactId>
			<version>${dollar}{webobjects.version}</version>
		</dependency>
		<dependency>
			<groupId>${dollar}{webobjects.groupId}</groupId>
			<artifactId>JavaEOAccess</artifactId>
			<version>${dollar}{webobjects.version}</version>
		</dependency>
		<dependency>
			<groupId>${dollar}{webobjects.groupId}</groupId>
			<artifactId>JavaWOJSPServlet</artifactId>
			<version>${dollar}{webobjects.version}</version>
		</dependency>
		<dependency>
			<groupId>${dollar}{webobjects.groupId}</groupId>
			<artifactId>JavaFoundation</artifactId>
			<version>${dollar}{webobjects.version}</version>
		</dependency>
	</dependencies>
</project>